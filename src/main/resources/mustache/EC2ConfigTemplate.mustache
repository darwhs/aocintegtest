extensions:
  health_check:
  pprof:
    endpoint: 0.0.0.0:1777
  zpages:
    endpoint: 0.0.0.0:55679

receivers:
  otlp:
    endpoint: 0.0.0.0:55680
  jaeger:
    protocols:
      thrift_http:
        endpoint: "0.0.0.0:14268"
  prometheus:
    config:
      scrape_configs:
        - job_name: 'otel_telemetry'
          scrape_interval: 5s
          static_configs:
            - targets: ['0.0.0.0:8888']


processors:
  batch:
  queued_retry:

exporters:
  logging:
    loglevel: debug
  awsxray:
    local_mode: true
    region: 'us-west-2'
  jaeger:
    endpoint: jaeger-all-in-one:14250
  awsemf:
    log_group_name: 'awscollector'
    local_mode: true
    region: 'us-west-2'


service:
  pipelines:
    traces:
      receivers: [jaeger, otlp]
      exporters: [awsxray, jaeger]
    metrics:
      receivers: [otlp]
      exporters: [logging, awsemf]

    metrics/2:
      receivers: [prometheus]
      exporters: [logging, awsemf]

  extensions: [health_check, pprof, zpages]